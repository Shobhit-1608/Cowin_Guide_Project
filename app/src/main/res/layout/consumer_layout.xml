<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/CItemLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        >
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <TextView
                android:id="@+id/CphoneNumber"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#26292e"
                android:textSize="15dp"
                android:text="7903241183"
                android:maxLines="1"/>

             <TextView
                 android:id="@+id/Cname"
                 android:layout_weight="1"
                 android:layout_marginStart="@dimen/dp5"
                 android:layout_width="wrap_content"
                 android:layout_gravity="right"
                 android:gravity="right"
                 android:layout_height="wrap_content"
                 android:textColor="#26292e"
                 android:textSize="15dp"
                 android:text="Raju kumar"
                 />

         </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/consumer_service_type"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Ambulance"
                    android:layout_gravity="bottom"
                    android:textSize="14sp"
                    />


                    <TextView
                        android:id="@+id/Consumer_calltype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:text="@string/incoming_call"

                        />

            </LinearLayout>

            <TextView
                android:id="@+id/Cdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/medium_text"
                android:textSize="12dp"
                android:text="12/06/97"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/Caddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/medium_text"
                android:textSize="12dp"
                android:text="8, Kautilya Ln, Vikash Nagar, Balapur, Patna, Bihar 800010, India"
                />



        </LinearLayout>


    </LinearLayout>

</LinearLayout>